    <script>
        // –°–æ–∑–¥–∞–µ–º –∫–æ–Ω—Ç–µ–Ω—Ç –¥–ª—è —Å–∫—Ä–æ–ª–ª–∞
        const items = [
            "üìå –ü–µ—Ä–≤—ã–π —ç–ª–µ–º–µ–Ω—Ç –±–µ—Å–∫–æ–Ω–µ—á–Ω–æ–≥–æ —Å–∫—Ä–æ–ª–ª–∞",
            "üé® –í—Ç–æ—Ä–æ–π —ç–ª–µ–º–µ–Ω—Ç —Å –ø–æ–ª–µ–∑–Ω–æ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–µ–π",
            "üöÄ –¢—Ä–µ—Ç–∏–π —ç–ª–µ–º–µ–Ω—Ç - –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏—è —Ä–∞–±–æ—Ç—ã",
            "üí° –ß–µ—Ç–≤–µ—Ä—Ç—ã–π —ç–ª–µ–º–µ–Ω—Ç –¥–ª—è –Ω–∞–≥–ª—è–¥–Ω–æ—Å—Ç–∏",
            "üîß –ü—è—Ç—ã–π —ç–ª–µ–º–µ–Ω—Ç —Å –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–º–∏ –¥–∞–Ω–Ω—ã–º–∏",
            "üìä –®–µ—Å—Ç–æ–π —ç–ª–µ–º–µ–Ω—Ç —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏",
            "üéØ –°–µ–¥—å–º–æ–π —ç–ª–µ–º–µ–Ω—Ç —Ü–µ–ª–µ–π –∏ –∑–∞–¥–∞—á",
            "üåü –í–æ—Å—å–º–æ–π —ç–ª–µ–º–µ–Ω—Ç —É—Å–ø–µ—Ö–æ–≤ –∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–π",
            "üîÑ –î–µ–≤—è—Ç—ã–π —ç–ª–µ–º–µ–Ω—Ç –∑–∞–º—ã–∫–∞–µ—Ç —Ü–∏–∫–ª",
            "üé™ –î–µ—Å—è—Ç—ã–π —ç–ª–µ–º–µ–Ω—Ç –∑–∞–≤–µ—Ä—à–∞–µ—Ç –ø–µ—Ä–≤—ã–π –∫—Ä—É–≥"
        ];
        
        // –î—É–±–ª–∏—Ä—É–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è –±–µ—Å—à–æ–≤–Ω–æ–≥–æ –ø–µ—Ä–µ—Ö–æ–¥–∞
        const duplicatedItems = [...items, ...items];
        
        const content = document.getElementById('content');
        let speed = 30; // —Å–µ–∫—É–Ω–¥ –Ω–∞ –ø–æ–ª–Ω—ã–π —Ü–∏–∫–ª
        let isPaused = false;
        let direction = 1; // 1 = –≤–Ω–∏–∑, -1 = –≤–≤–µ—Ä—Ö
        
        // –ó–∞–ø–æ–ª–Ω—è–µ–º –∫–æ–Ω—Ç–µ–Ω—Ç
        duplicatedItems.forEach((text, index) => {
            const item = document.createElement('div');
            item.className = 'item';
            item.textContent = `${index + 1}. ${text}`;
            content.appendChild(item);
        });
        
        // –û–±–Ω–æ–≤–ª—è–µ–º –∞–Ω–∏–º–∞—Ü–∏—é
        function updateAnimation() {
            const animationDuration = speed + 's';
            const animationName = direction === 1 ? 'scroll' : 'scroll-reverse';
            
            // –°–æ–∑–¥–∞–µ–º –æ–±—Ä–∞—Ç–Ω—É—é –∞–Ω–∏–º–∞—Ü–∏—é
            if (!document.getElementById('reverse-style')) {
                const style = document.createElement('style');
                style.id = 'reverse-style';
                style.textContent = `
                    @keyframes scroll-reverse {
                        0% { transform: translateY(-50%); }
                        100% { transform: translateY(0); }
                    }
                `;
                document.head.appendChild(style);
            }
            
            content.style.animation = `${animationName} ${animationDuration} linear infinite`;
            content.style.animationPlayState = isPaused ? 'paused' : 'running';
        }
        
        // –§—É–Ω–∫—Ü–∏–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
        function changeSpeed(delta) {
            speed = Math.max(5, Math.min(60, speed + delta * 5));
            updateAnimation();
            showNotification(`–°–∫–æ—Ä–æ—Å—Ç—å: ${speed}—Å –Ω–∞ —Ü–∏–∫–ª`);
        }
        
        function togglePause() {
            isPaused = !isPaused;
            updateAnimation();
            showNotification(isPaused ? '‚è∏Ô∏è –ü–∞—É–∑–∞' : '‚ñ∂Ô∏è –ü—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ');
        }
        
        function changeDirection() {
            direction *= -1;
            updateAnimation();
            showNotification(direction === 1 ? '‚¨áÔ∏è –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: –≤–Ω–∏–∑' : '‚¨ÜÔ∏è –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: –≤–≤–µ—Ä—Ö');
        }
        
        function showNotification(message) {
            // –°–æ–∑–¥–∞–µ–º –≤—Ä–µ–º–µ–Ω–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            const notification = document.createElement('div');
            notification.textContent = message;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
                z-index: 1000;
                animation: fadeOut 2s forwards;
            `;
            
            // –î–æ–±–∞–≤–ª—è–µ–º –∞–Ω–∏–º–∞—Ü–∏—é fadeOut
            if (!document.getElementById('fadeout-style')) {
                const style = document.createElement('style');
                style.id = 'fadeout-style';
                style.textContent = `
                    @keyframes fadeOut {
                        0% { opacity: 1; }
                        70% { opacity: 1; }
                        100% { opacity: 0; }
                    }
                `;
                document.head.appendChild(style);
            }
            
            document.body.appendChild(notification);
            setTimeout(() => notification.remove(), 2000);
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        updateAnimation();
        
        // –î–æ–±–∞–≤–ª—è–µ–º –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –∫–æ–ª–µ—Å–æ–º –º—ã—à–∏
        document.querySelector('.scroll-demo').addEventListener('wheel', (e) => {
            if (e.ctrlKey) {
                e.preventDefault();
                changeSpeed(e.deltaY > 0 ? -1 : 1);
            }
        });
        
        // –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –¥–ª—è –∫–æ–Ω—Å–æ–ª–∏
        console.log('–ë–µ—Å–∫–æ–Ω–µ—á–Ω—ã–π —Å–∫—Ä–æ–ª–ª –∑–∞–≥—Ä—É–∂–µ–Ω!');
        console.log('–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ:');
        console.log('- –ö–Ω–æ–ø–∫–∏ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ');
        console.log('- Ctrl + –∫–æ–ª–µ—Å–æ –º—ã—à–∏ –¥–ª—è –∏–∑–º–µ–Ω–µ–Ω–∏—è —Å–∫–æ—Ä–æ—Å—Ç–∏');
        console.log('- –ù–∞–≤–µ–¥–∏—Ç–µ –Ω–∞ –∫–æ–Ω—Ç–µ–Ω—Ç –¥–ª—è –ø–∞—É–∑—ã');
